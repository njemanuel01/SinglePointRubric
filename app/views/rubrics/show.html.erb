<p>
  <strong>Rubric Name:</strong>
  <%= @rubric.name %>
</p>

<h4>Objectives</h4>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.description %></td>
        <% if current_user.is_teacher %>
          <td><%= link_to 'Edit', edit_objective_path(objective) %></td>
          <td><%= link_to 'Destroy', objective, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if !current_user.is_teacher %>
  <% if StudentRubric.where("user_id = ? AND :rubric_id = ?", current_user.id, @rubric.id).notes %>
    <%= StudentRubric.where("user_id = ? AND :rubric_id = ?", current_user.id, @rubric.id).notes %>
  <% end %>
<% end %>

<br>
<% if current_user.is_teacher %>
  <%= link_to 'New Objective', new_objective_path(@rubric.id) %>
<% end %>
<br>
<%= link_to 'Edit', edit_rubric_path(@rubric) %> |
<%= link_to 'Back', my_rubrics_path %>
